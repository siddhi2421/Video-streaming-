<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Details</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    body {
      background-color: white;
      color: white;
    }
    h1, p {
      color: white;
    }
    .btn-custom {
      background-color: rgb(255, 255, 255);
      color: rgb(0, 0, 0);
      border: 2px solid white;
      width: 10rem;
      font-weight: 700;
    }
    .btn-custom:hover {
      color: white;
    }
    .btn-edit:hover {
      background-color: blue;
      color: white;
    }
    .btn-delete:hover {
      background-color: red;
      color: white;
    }
    .video-container {
      border: 3px solid #ccc;
      border-radius: 10px;
      padding: 20px;
      background-color: #333;
      color: white;
      text-align: center;
    }
    .video-container video {
      width: 640px;
      height: auto; /* Maintains aspect ratio */
    }
    .customtext{
      margin-left: 10rem;
      margin-right: 10rem;
      text-wrap: wrap;
    }
    .btn-edit i{
      color: white;
    }
    .btn-delete i{
      color: white;
    }
  </style>
</head>
<body>
  <div class="container d-flex flex-column align-items-center mt-5 video-container">
    <h1 class="mb-4"><%= video.title %></h1>
    <div class="mb-4">
      <video controls class="border rounded">
        <source src="<%= video.videoUrl %>" type="video/mp4" />
      </video>
    </div>
    <p class="text mb-4">Uploaded at: <%= video.uploadedAt.toLocaleString() %></p>
    <p class="text mb-4 customtext">Description: <%= video.description %></p>
    <!-- Edit and Delete Options -->
    <div class="d-flex gap-3">
      <a href="/videos/<%= video._id %>/edit" class="btn btn-custom btn-edit"><i class="fas fa-edit icon"></i>&nbsp;Edit</a>
      <form
        action="/videos/<%= video._id %>/delete"
        method="POST"
        style="display: inline">
        <button
          type="submit"
          class="btn btn-custom btn-delete"
          onclick="return confirm('Are you sure you want to delete this video?')">
          Delete &nbsp;<i class="fa-solid fa-trash-can"></i>
        </button>
      </form>
    </div>
  </div>
  <!-- Bootstrap JS (optional, for certain components) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
